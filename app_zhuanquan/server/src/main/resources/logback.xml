<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="1 minutes" debug="false">
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <Target>System.out</Target>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%-5level] [%logger.%M:%L] - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="rolling"
              class="ch.qos.logback.core.FileAppender">
        <file>${catalina.base}/logs/pay_app.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] [%logger.%M:%L] |%msg%n</pattern>
        </encoder>
        <charset>UTF-8</charset>
    </appender>

    <appender name="async_rolling" class="ch.qos.logback.classic.AsyncAppender">
        <!-- 不丢失日志.默认的,如果队列的80%已满,则会丢弃TRACT、DEBUG、INFO级别的日志 -->
        <discardingThreshold>0</discardingThreshold>
        <!-- 更改默认的队列的深度,该值会影响性能.默认值为256 -->
        <queueSize>512</queueSize>
        <!-- 添加附加的appender,最多只能添加一个 -->
        <appender-ref ref="rolling"/>
    </appender>

    <root level="info">
        <!-- <appender-ref ref="stdout" /> -->
        <appender-ref ref="async_rolling"/>
    </root>


	
	<!--aop用户请求日志 -->
	<appender name="USERREQUEST"
		class="ch.qos.logback.core.FileAppender">
		<file>${catalina.base}/logs/pay_app_user_request.log</file>
		<append>true</append>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] [%logger.%M:%L] |%msg%n
			</pattern>
			<charset>utf-8</charset>
		</encoder>
	</appender>
	
	<!--aop用户请求日志 -->
	<logger name="com.waiqin365.pay.core.helper.UserRequestLogger"
		additivity="false" level="info">
		<appender-ref ref="USERREQUEST" />
	</logger>



	<!--微信请求日志 -->
	<appender name="WEB_CHAT_LOG"
		class="ch.qos.logback.core.FileAppender">
		<file>${catalina.base}/logs/thirdpay_webchat.log</file>
		<append>true</append>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] [%logger.%M:%L] |%msg%n
			</pattern>
			<charset>utf-8</charset>
		</encoder>
	</appender>
	
	<!--微信请求日志 -->
	<logger name="com.waiqin365.pay.thirdpay.internel.webchat"
		additivity="false" level="info">
		<appender-ref ref="WEB_CHAT_LOG" />
	</logger>

	<!--a支付宝请求日志 -->
	<appender name="Alipay_LOG"
		class="ch.qos.logback.core.FileAppender">
		<file>${catalina.base}/logs/thirdpay_alipay.log</file>
		<append>true</append>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] [%logger.%M:%L] |%msg%n
			</pattern>
			<charset>utf-8</charset>
		</encoder>
	</appender>
	
	<!--支付宝请求日志 -->
	<logger name="com.waiqin365.pay.thirdpay.internel.alipay"
		additivity="false" level="info">
		<appender-ref ref="Alipay_LOG" />
	</logger>


	<!--async notify日志 -->
	<appender name="ASYNC_NOTIFY_LOG"
		class="ch.qos.logback.core.FileAppender">
		<file>${catalina.base}/logs/pay_async_notify.log</file>
		<append>true</append>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] [%logger.%M:%L] |%msg%n
			</pattern>
			<charset>utf-8</charset>
		</encoder>
	</appender>
	
	<!--async notify日志 -->
	<logger name="com.waiqin365.pay.core.asyncnotify"
		additivity="false" level="info">
		<appender-ref ref="ASYNC_NOTIFY_LOG" />
	</logger>








    <logger name="com.ibatis" level="ERROR"/>
    <logger name="org.springframework" level="ERROR"/>
    <logger name="com.ibatis.sqlmap.engine.impl.SqlMapClientDelegate" level="ERROR"/>
    <logger name="org.apache.commons" level="ERROR"/>
    <logger name="catalia" level="ERROR"/>
    <logger name="org.apache" level="ERROR"/>
    <logger name="com.ibatis.common.jdbc.SimpleDataSource" level="ERROR"/>
    <logger name="java.sql.ResultSet" level="ERROR"/>
    <logger name="com.ibatis.common.jdbc.ScriptRunner" level="ERROR"/>
    <logger name="java.sql.Connection" level="ERROR"/>
    <logger name="java.sql.PreparedStatement" level="ERROR"/>

</configuration>